<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/layout_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <ScrollView
            android:layout_below="@id/background"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="2dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/profile_panel">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_profile"/>

                    <TextView
                        android:id="@+id/edit_profile"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        style="@style/fonts"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="2dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/cart_panel">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_cart"/>

                    <TextView
                        android:id="@+id/cart"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/cart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        style="@style/fonts"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="2dp"/>


                <LinearLayout
                    android:id="@+id/wish_list_panel"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_heart_grey"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        style="@style/fonts"
                        android:layout_weight="0.9"
                        android:text="@string/wish_list"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_checkout_success"/>

                </LinearLayout>

                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:id="@+id/language_panel"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_flag"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        style="@style/fonts"
                        android:layout_weight="0.9"
                        android:text="@string/language"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnLogout"
                        android:background="@color/red_600"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/logout"
                        android:textSize="18sp"
                        android:visibility="visible"
                        />



                </LinearLayout>
            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <LinearLayout

        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_whatsapp"/>


        <ImageView
            android:id="@+id/facebook"
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_facebook"/>

        <ImageView
            android:id="@+id/instigram"
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_insta"/>
    </LinearLayout>
</RelativeLayout>